<UserControl x:Class="AP.TickAndCross"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="480">

    <Canvas>
        <Image x:Name="img1" Height="50" Width="50"
                             Canvas.Left="-60" Canvas.Top="15" Tap="tbTick_Tap" />
        <Image x:Name="img2" Height="50" Width="50"
                             Canvas.Left="-120" Canvas.Top="15" Tap="tbEdit_Tap" />
        <Image x:Name="img3" Height="50" Width="50"
                             Canvas.Left="-180" Canvas.Top="15" Tap="tbMusic_Tap" />
    </Canvas>
</UserControl>
